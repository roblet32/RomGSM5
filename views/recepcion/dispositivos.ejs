<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Dispositivos | ROCKETGS</title>
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/dashboard.css">
    <style>
        .device-actions {
            display: flex;
            gap: 8px;
            flex-wrap: wrap;
        }
        .btn-small {
            padding: 6px 12px;
            font-size: 12px;
            border-radius: var(--border-radius);
            text-decoration: none;
            display: inline-block;
            transition: all var(--transition);
        }
        .btn-edit { 
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: white; 
        }
        .btn-delete { 
            background: linear-gradient(135deg, var(--danger), #c0392b);
            color: white; 
        }
        .btn-small:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        }
        .status-active { 
            color: var(--success); 
            font-weight: bold; 
        }
        .status-inactive { 
            color: var(--danger); 
            font-weight: bold; 
        }
        .device-photos {
            display: flex;
            gap: 6px;
            flex-wrap: wrap;
            align-items: center;
        }
        .device-photo {
            width: 45px;
            height: 45px;
            object-fit: cover;
            border-radius: var(--border-radius);
            border: 2px solid #e2e8f0;
            transition: transform var(--transition);
        }
        .device-photo:hover {
            transform: scale(1.1);
            border-color: var(--primary);
        }
        .device-info {
            max-width: 250px;
        }
        .device-name {
            font-weight: 600;
            color: var(--primary-dark);
            margin-bottom: 4px;
        }
        .device-details {
            color: var(--text);
            font-size: 13px;
            line-height: 1.4;
        }
        .header-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
            flex-wrap: wrap;
            gap: 16px;
        }
        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 16px;
            margin: 24px 0;
            flex-wrap: wrap;
        }
        .pagination span {
            color: var(--text);
            font-weight: 500;
        }
        .footer-actions {
            display: flex;
            gap: 12px;
            margin-top: 24px;
            flex-wrap: wrap;
        }
        .table-container {
            background: #fff;
            border-radius: var(--border-radius);
            box-shadow: 0 4px 24px rgba(0,0,0,0.07);
            overflow: hidden;
            border: 1px solid #e2e8f0;
        }
        .table-container table {
            width: 100%;
            border-collapse: collapse;
        }
        .table-container th,
        .table-container td {
            padding: 16px;
            text-align: left;
            border-bottom: 1px solid #e2e8f0;
        }
        .table-container th {
            background: var(--background);
            font-weight: 600;
            color: var(--primary-dark);
        }
        .table-container tr:hover {
            background: var(--background);
        }
        .client-name {
            font-weight: 500;
            color: var(--text);
        }
        .photo-count {
            font-size: 11px;
            color: var(--text);
            font-weight: 500;
        }
        .no-photos {
            color: #999;
            font-size: 11px;
            font-style: italic;
        }
    </style>
</head>
<body>
    <main>
        <div class="container">
            <div class="header-actions">
                <h1>Gestión de Dispositivos</h1>
                <a href="/recepcion/dispositivos/nuevo" class="btn">+ Nuevo Dispositivo</a>
            </div>

            <% if (typeof success !== 'undefined') { %>
                <div class="success"><%= success %></div>
            <% } %>

            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Dispositivo</th>
                            <th>Cliente</th>
                            <th>Fotos</th>
                            <th>Fecha Ingreso</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% dispositivos.forEach(dispositivo => { %>
                            <tr>
                                <td>
                                    <div class="device-info">
                                        <div class="device-name">
                                            <%= dispositivo.tipo %> - <%= dispositivo.marca %> <%= dispositivo.modelo %>
                                        </div>
                                        <div class="device-details">
                                            <div>Serie: <%= dispositivo.numeroSerie || 'N/A' %></div>
                                            <% if (dispositivo.descripcionProblema) { %>
                                                <div>Problema: <%= dispositivo.descripcionProblema.substring(0, 50) %><%= dispositivo.descripcionProblema.length > 50 ? '...' : '' %></div>
                                            <% } %>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="client-name"><%= dispositivo.cliente.nombre %></div>
                                </td>
                                <td>
                                    <% if (dispositivo.fotos && dispositivo.fotos.length > 0) { %>
                                        <div class="device-photos">
                                            <% dispositivo.fotos.slice(0, 3).forEach(foto => { %>
                                                <img src="/uploads/<%= foto %>" alt="Foto dispositivo" class="device-photo" title="<%= foto %>">
                                            <% }); %>
                                            <% if (dispositivo.fotos.length > 3) { %>
                                                <span class="photo-count">+<%= dispositivo.fotos.length - 3 %> más</span>
                                            <% } %>
                                        </div>
                                    <% } else { %>
                                        <span class="no-photos">Sin fotos</span>
                                    <% } %>
                                </td>
                                <td>
                                    <div class="device-details">
                                        <%= new Date(dispositivo.fechaIngreso).toLocaleDateString('es-ES') %>
                                    </div>
                                </td>
                                <td>
                                    <span class="<%= dispositivo.activo ? 'status-active' : 'status-inactive' %>">
                                        <%= dispositivo.activo ? 'Activo' : 'Inactivo' %>
                                    </span>
                                </td>
                                <td>
                                    <div class="device-actions">
                                        <a href="/recepcion/dispositivos/<%= dispositivo._id %>/editar" class="btn-small btn-edit">Editar</a>
                                        <button onclick="eliminarDispositivo('<%= dispositivo._id %>', '<%= dispositivo.tipo %> <%= dispositivo.marca %> <%= dispositivo.modelo %>')" class="btn-small btn-delete">Eliminar</button>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>

            <!-- Paginación -->
            <% if (pagination.totalPages > 1) { %>
                <div class="pagination">
                    <% if (pagination.hasPrev) { %>
                        <a href="?page=<%= pagination.page - 1 %>" class="btn">← Anterior</a>
                    <% } %>
                    
                    <span>Página <%= pagination.page %> de <%= pagination.totalPages %></span>
                    
                    <% if (pagination.hasNext) { %>
                        <a href="?page=<%= pagination.page + 1 %>" class="btn">Siguiente →</a>
                    <% } %>
                </div>
            <% } %>

            <div class="footer-actions">
                <button onclick="history.back()" class="btn">Volver</button>
                <a href="/recepcion/dashboard" class="btn">Dashboard</a>
            </div>
        </div>
    </main>

    <script>
        function eliminarDispositivo(dispositivoId, dispositivoNombre) {
            if (confirm(`¿Está seguro de que desea eliminar el dispositivo "${dispositivoNombre}"?`)) {
                fetch(`/recepcion/dispositivos/${dispositivoId}/eliminar`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert('Error: ' + data.error);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error eliminando dispositivo');
                });
            }
        }
    </script>
    <%- include('../partials/footer') %>
</body>
</html>