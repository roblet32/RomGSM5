<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cambiar Contraseña | ROCKETGS</title>
    <link rel="stylesheet" href="/css/base.css">
</head>
<body>
    <main>
        <div class="container">
            <h1>Cambiar Contraseña</h1>
            <p><strong>Usuario:</strong> <%= user.username %></p>
            <p><strong>Nombre:</strong> <%= user.nombre || 'N/A' %></p>

            <% if (typeof error !== 'undefined') { %>
                <div class="error"><%= error %></div>
            <% } %>

            <% if (typeof success !== 'undefined') { %>
                <div class="success"><%= success %></div>
            <% } %>

            <form action="/admin/users/<%= user._id %>/cambiar-password" method="POST">
                <div class="form-group">
                    <label for="newPassword">Nueva Contraseña *</label>
                    <input type="password" id="newPassword" name="newPassword" required>
                    <small>Mínimo 8 caracteres, incluir mayúscula, minúscula y número</small>
                </div>

                <div class="form-group">
                    <label for="confirmPassword">Confirmar Nueva Contraseña *</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" required>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn">Cambiar Contraseña</button>
                    <button type="button" onclick="history.back()" class="btn">Cancelar</button>
                </div>
            </form>

            <div style="margin-top: 20px; display: flex; gap: 10px;">
                <button onclick="history.back()" class="btn">Volver</button>
                <a href="/admin/users" class="btn">Lista de Usuarios</a>
                <a href="/admin/dashboard" class="btn">Dashboard</a>
            </div>
        </div>
    </main>

    <script>
        // Validación de contraseñas
        document.addEventListener('DOMContentLoaded', function() {
            const newPassword = document.getElementById('newPassword');
            const confirmPassword = document.getElementById('confirmPassword');
            
            function validatePassword() {
                if (newPassword.value !== confirmPassword.value) {
                    confirmPassword.setCustomValidity('Las contraseñas no coinciden');
                } else {
                    confirmPassword.setCustomValidity('');
                }
            }
            
            newPassword.addEventListener('change', validatePassword);
            confirmPassword.addEventListener('keyup', validatePassword);
        });
    </script>
</body>
</html> 