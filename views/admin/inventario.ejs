<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Inventario | ROCKETGS</title>
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/dashboard.css">
    <style>
        .item-actions {
            display: flex;
            gap: 8px;
            flex-wrap: wrap;
        }
        .btn-small {
            padding: 6px 12px;
            font-size: 12px;
            border-radius: var(--border-radius);
            text-decoration: none;
            display: inline-block;
            transition: all var(--transition);
        }
        .btn-edit { 
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: white; 
        }
        .btn-delete { 
            background: linear-gradient(135deg, var(--danger), #c0392b);
            color: white; 
        }
        .btn-small:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        }
        .stock-low { 
            color: var(--danger); 
            font-weight: bold; 
        }
        .stock-ok { 
            color: var(--success); 
            font-weight: bold; 
        }
        .status-active { 
            color: var(--success); 
            font-weight: bold; 
        }
        .status-inactive { 
            color: var(--danger); 
            font-weight: bold; 
        }
        .category-badge {
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 11px;
            font-weight: bold;
            text-transform: uppercase;
        }
        .category-repuestos { 
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: white; 
        }
        .category-herramientas { 
            background: linear-gradient(135deg, var(--success), #2ecc71);
            color: white; 
        }
        .category-accesorios { 
            background: linear-gradient(135deg, #f39c12, #e67e22);
            color: white; 
        }
        .category-otros { 
            background: linear-gradient(135deg, #95a5a6, #7f8c8d);
            color: white; 
        }
        .header-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
            flex-wrap: wrap;
            gap: 16px;
        }
        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 16px;
            margin: 24px 0;
            flex-wrap: wrap;
        }
        .pagination span {
            color: var(--text);
            font-weight: 500;
        }
        .footer-actions {
            display: flex;
            gap: 12px;
            margin-top: 24px;
            flex-wrap: wrap;
        }
        .table-container {
            background: #fff;
            border-radius: var(--border-radius);
            box-shadow: 0 4px 24px rgba(0,0,0,0.07);
            overflow: hidden;
            border: 1px solid #e2e8f0;
        }
        .table-container table {
            width: 100%;
            border-collapse: collapse;
        }
        .table-container th,
        .table-container td {
            padding: 16px;
            text-align: left;
            border-bottom: 1px solid #e2e8f0;
        }
        .table-container th {
            background: var(--background);
            font-weight: 600;
            color: var(--primary-dark);
        }
        .table-container tr:hover {
            background: var(--background);
        }
        .item-name {
            font-weight: 600;
            color: var(--primary-dark);
        }
        .item-description {
            color: var(--text);
            font-size: 13px;
            margin-top: 4px;
        }
    </style>
</head>
<body>
    <main>
        <div class="container">
            <div class="header-actions">
                <h1>Gestión de Inventario</h1>
                <a href="/admin/inventario/nuevo" class="btn">+ Nuevo Item</a>
            </div>

            <% if (typeof success !== 'undefined') { %>
                <div class="success"><%= success %></div>
            <% } %>

            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Categoría</th>
                            <th>Precio</th>
                            <th>Stock</th>
                            <th>Stock Mínimo</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% inventario.forEach(item => { %>
                            <tr>
                                <td>
                                    <div class="item-name"><%= item.nombre %></div>
                                    <% if (item.descripcion) { %>
                                        <div class="item-description"><%= item.descripcion %></div>
                                    <% } %>
                                </td>
                                <td>
                                    <span class="category-badge category-<%= item.categoria %>">
                                        <%= item.categoria %>
                                    </span>
                                </td>
                                <td><strong>$<%= item.precio.toFixed(2) %></strong></td>
                                <td>
                                    <span class="<%= item.stock <= item.stockMinimo ? 'stock-low' : 'stock-ok' %>">
                                        <%= item.stock %>
                                    </span>
                                </td>
                                <td><%= item.stockMinimo %></td>
                                <td>
                                    <span class="<%= item.activo ? 'status-active' : 'status-inactive' %>">
                                        <%= item.activo ? 'Activo' : 'Inactivo' %>
                                    </span>
                                </td>
                                <td>
                                    <div class="item-actions">
                                        <a href="/admin/inventario/<%= item._id %>/editar" class="btn-small btn-edit">Editar</a>
                                        <button onclick="eliminarItem('<%= item._id %>', '<%= item.nombre %>')" class="btn-small btn-delete">Eliminar</button>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>

            <!-- Paginación -->
            <% if (pagination.totalPages > 1) { %>
                <div class="pagination">
                    <% if (pagination.hasPrev) { %>
                        <a href="?page=<%= pagination.page - 1 %>" class="btn">← Anterior</a>
                    <% } %>
                    
                    <span>Página <%= pagination.page %> de <%= pagination.totalPages %></span>
                    
                    <% if (pagination.hasNext) { %>
                        <a href="?page=<%= pagination.page + 1 %>" class="btn">Siguiente →</a>
                    <% } %>
                </div>
            <% } %>

            <div class="footer-actions">
                <button onclick="history.back()" class="btn">Volver</button>
                <a href="/admin/dashboard" class="btn">Dashboard</a>
            </div>
        </div>
    </main>

    <script>
        function eliminarItem(itemId, itemName) {
            if (confirm(`¿Está seguro de que desea eliminar el item "${itemName}"?`)) {
                fetch(`/admin/inventario/${itemId}/eliminar`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert('Error: ' + data.error);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error eliminando item');
                });
            }
        }
    </script>
    <%- include('../partials/footer') %>
</body>
</html>